{
  "defaultSeverity": "error",
  "extends": [
      "tslint:recommended"
  ],
  "rulesDirectory": [],
  "rules": {
    "max-line-length": {
        "options": [120]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": {
        "options": [
            "debug",
            "info",
            "log",
            "time",
            "timeEnd",
            "trace"
        ]
    },
    "semicolon": [false, "always"],
    "quotemark": [false, "single", "double", "avoid-escape", "avoid-template"],
    "interface-name": [true, "never-prefix"],
    "object-literal-sort-keys": false,
    "max-classes-per-file": [false, 1],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "ignore",
          "arrays": "ignore",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],

    "no-namespace": [false, "allow-declarations"]
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  },
  "stub": "stub"
}